{
  "manifest_version": 2,

  "name": "WorkFlowy code formatter",
  "description": "Makes backtick wrapped text look like code! {openSource}",
  "version": "0.3.0",

  "icons": {
    "128": "wcf_icon.png"
  },

  "content_scripts": [{
    "matches": ["https://workflowy.com/*"],
    "js": ["workflowyCodeFormatter.js"]
  }],

  "content_security_policy": "script-src 'self' https://cdn.rawgit.com; object-src 'self'"

}
